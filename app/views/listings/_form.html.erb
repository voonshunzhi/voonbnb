<h3><%=@listing.new_record? ? "Create new lisitng :" : "Edit my listing :"%></h3>


<%=form_for @listing,html:{class:"form-horizontal"} do |form|%>
	<div class="form-group row">
		<%= form.label "Name of Airbnb :" ,class:"col-sm-2 col-form-label" %>
		<div class="col-sm-10">
		<%= form.text_field :name,autofocus:true,class:"form-control form-control-sm"%>
		</div>
	</div>
	<div class="form-group row">
		<%= form.label "Price per night : " ,class:"col-sm-2 col-form-label" %>
		<div class="col-sm-10">
		<%= form.text_field :price_per_night,class:"form-control form-control-sm"%>
		</div>
	</div>
	<div class="form-group row">
		<%= form.label "Number of Beds :" ,class:"col-sm-2 col-form-label" %>
		<div class="col-sm-10">
		<%= form.text_field :num_of_beds,class:"form-control form-control-sm"%>
		</div>
	</div>
	<div class="form-group row">
		<%= form.label "Number of Bathroom :" ,class:"col-sm-2 col-form-label" %>
		<div class="col-sm-10">
		<%= form.text_field :num_of_bath,class:"form-control form-control-sm"%>
		</div>
	</div>
	<div class="form-group row">
		<%= form.label "Number of Room :" ,class:"col-sm-2 col-form-label" %>
		<div class="col-sm-10">
		<%= form.text_field :num_of_rooms,class:"form-control form-control-sm"%>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label "Amenities Available : " ,class:"col-sm-2 col-form-label"%>
		<div class="col-sm-10">
			<%= form.check_box :amenities,{multiple: true},"wifi",false%> Wifi
			<%= form.check_box :amenities,{multiple: true},"kitchen",false%> Kitchen
			<%= form.check_box :amenities,{multiple: true},"washer",false%>Washer
			<%= form.check_box :amenities,{multiple: true},"dryer",false%>Dryer
			<%= form.check_box :amenities,{multiple: true},"iron",false%>Iron
			<%= form.check_box :amenities,{multiple: true},"hair_dryer",false%>Hair Dryer
			<%= form.check_box :amenities,{multiple: true},"Air-conditoning",false%>Air-conditioning
		</div>
	</div>

	<div class="form-group row">
		<%= form.label "Type of Airbnb:" ,class:"col-sm-2 col-form-label"%>
		<div class="col-sm-10">
		<%= form.select :sort_id, Sort.all.collect {|sort| [sort.sort,sort.id]},class:"form-control form-control-sm"%>
		</div>
	</div>
	 
	<div class="form-group row">
		<%= form.label "Image of your Airbnb :" ,class:"col-sm-2 col-form-label"%>
		<div class="col-sm-10">
		<%= form.file_field :image, multiple: true ,class:"form-control form-control-sm"%>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label "House number :" ,class:"col-sm-2 col-form-label"%>
		<div class="col-sm-10">
		<%= form.text_field :house_number,placeholder:"428.....",class:"form-control form-control-sm"%>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label "Street :" ,class:"col-sm-2 col-form-label"%>
		<div class="col-sm-10">
		<%= form.text_field :street,placeholder:"Jalan Glomac....",class:"form-control form-control-sm"%>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label "Resident :" ,class:"col-sm-2 col-form-label"%>
		<div class="col-sm-10">
		<%= form.text_field :resident,placeholder:"Bandar Subang....",class:"form-control form-control-sm"%>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label "City :" ,class:"col-sm-2 col-form-label"%>
		<div class="col-sm-10">
		<%= form.text_field :city,placeholder:"Glomac Daman......",class:"form-control form-control-sm"%>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label "Poscode :" ,class:"col-sm-2 col-form-label"%>
		<div class="col-sm-10">
		<%= form.text_field :poscode,placeholder:"0300523605......",class:"form-control form-control-sm"%>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label "State :" ,class:"col-sm-2 col-form-label"%>
		<div class="col-sm-10">
		<%= form.text_field :state,placeholder:"Florida....",class:"form-control form-control-sm"%>
		</div>
	</div>

	<div class="form-group row">
		<%= form.label "Country :" ,class:"col-sm-2 col-form-label"%>
		<div class="col-sm-10">
		<%= form.text_field :country,placeholder:"Singapore.....",class:"form-control form-control-sm"%>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-10 offset-sm-2">
		<%= form.submit(@listing.new_record? ? "List !" : "Update",class:"btn btn-primary")%>
		</div>
	</div>
<%end%> 