<h1>My Reservation</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Name of airbnb</th>
            <th>Image</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Payment status</th>
            <th>Pay now</th>
        </tr>
    </thead>
    <tbody>
	    	<%@reservations.each do |reservation|%>
            <tr>
	    		<th><%=reservation.listing.name%></th>
	    		<th><%=image_tag reservation.listing.image[0].url,class:"img-sm"%></th>
	    		<th><%=reservation.check_in_date%></th>
	    		<th><%=reservation.check_out_date%></th>
	    		<th><%=reservation.payment_status%></th>
	    		<th>Paid</th>
            </tr>
	    	<%end%>
    </tbody>
</table>
