
    <%= form_for :session, url: session_path,html:{class:"form-horizontal"} do |form| %>
      <div class="text-field form-group row">
        <%= form.label :email,class:"col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%= form.text_field :email, type: 'email',class:"form-control" %>
        </div>
      </div>

      <div class="password-field form-group row">
        <%= form.label :password,class:"col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= form.password_field :password ,class:"form-control"%>
        </div>
      </div>

      <div class="submit-field form-group row">
        <div class="col-sm-10 offset-sm-2">
        <%= form.submit "Log In!",class:"btn btn-primary btn-lg"%>
        <% if Clearance.configuration.allow_sign_up? %>
          <%= link_to t(".sign_up"), sign_up_path,class:"btn btn-warning btn-sm" %>
        <% end %>
        <%= link_to t(".forgot_password"), new_password_path,class:"btn btn-danger btn-sm" %>
        </div>
      </div>

      <div class="other-links">
        
      </div>
    <% end %>
