<div class="text-field form-group row">
	<%= form.label :username,class:"col-sm-2"%>
	<div class="col-sm-10">
		<%= form.text_field :username,class:"form-control"%>
	</div>
</div>

<div class="text-field form-group row">
  <%= form.label :email,class:"col-sm-2"%>
  <div class="col-sm-10">
  	<%= form.text_field :email, type: 'email',class:"form-control" %>
  </div>
</div>

<div class="password-field form-group row">
  <%= form.label :password,class:"col-sm-2" %>
  <div class="col-sm-10">
  	<%= form.password_field :password,class:"form-control" %>
  </div>
</div>

<div class="submit-field form-group row">
	<div class="col-sm-10 offset-sm-2">
        <%= form.submit "Sign Up",class:"btn btn-lg btn-primary" %>
        <%= link_to t(".sign_in"), sign_in_path,class:"btn btn-sm btn-danger" %>
    </div>
</div>

