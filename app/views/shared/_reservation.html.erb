<table class="table table-hover">
    <thead>
        <tr>
            <th>Name of airbnb</th>
            <th>Image</th>
            <th>Check-in</th>
            <th>Check-out</th>
            <th>Price per night(RM)</th>
            <th>Days</th>
            <th>Total Price(RM)</th>
            <th>Payment status</th>
            <th>Pay now</th>
        </tr>
    </thead>
    <tbody>
	    	<%obj.each do |reservation|%>
            <tr>
	    		<th><%=reservation.listing.name%></th>
	    		<th><%=image_tag reservation.listing.image[0].url,class:"img-sm"%></th>
	    		<th><%=reservation.check_in_date%></th>
	    		<th><%=reservation.check_out_date%></th>
                <th><%=reservation.listing.price_per_night.to_s[0..-3]%></th>
                <th><%=reservation.days%></th>
                <th><%=reservation.total_price.to_s[0..-3]%></th>
	    		<th><%=reservation.payment_status%></th>
	    		<th>Paid</th>
            </tr>
	    	<%end%>
    </tbody>
</table>