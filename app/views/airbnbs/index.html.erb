<div class="card-deck">
	<%@listings.each do |listing|%>
		<div class="card">
		  <%= image_tag(listing.image[0].url,class:"card-img-top img-md",alt:listing.name) %>
		  <div class="card-body">
			<p class="card-text pre-header-text"><%= listing.sort.sort + " | " + listing.city%></p>
			<p class="card-text header-text"><%= listing.name%></p>
			<p class="card-text price-text"><%= "RM " + listing.price_per_night.to_s[0..-3] + " per night"%></p>
		  </div>
		</div>
	<%end%>
</div>
